<%= render 'shared/navbar_pages' %>
<div class="container">
  <div class="d-flex justify-content-between align-items-center">
  <%= render 'avatar_photo' %>
  </div>
    <p>Joined in <%= "#{current_user.created_at.year}" %></p>
    <% if current_user.user_reviews.any? %>
      <h6><%= "#{current_user.user_reviews.count} Reviews" %></h6>
    <% end %>
    <p class="link-allivu"><%= link_to "Account settings", edit_user_registration_path %></p>
  <br>
  <!-- Upcoming bookings -->
  <%= render 'user_bookings' %>

  <!-- Review feed -->
  <%= render 'review_feed' %>

  <!-- Provider option -->
  <h3 class="h3-allivu">Become a Provider</h3>

  <div class="d-flex justify-content-center my-3">
    <%= button_to "Become a provider", users_account_provider_path, class: "button-wide" %>
  </div>

  <div class="d-flex justify-content-center my-3">
    <%= button_to "logout", destroy_user_session_path, method: :delete, class: "button-wide" %>
  </div>
</div>
