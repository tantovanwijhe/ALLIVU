<% @services = Service.where(user_id: current_user) %>
<!-- Past bookings -->
  <% @services.each do |service| %>
    <% if service.bookings.any? == false %>
      <p class="mt-4">No past bookings.</p>
    <% end %>

    <% service.bookings.limit(3).each do |booking| %>
      <% if booking.start_date < Date.today %>
        <div class="card-product">
        <%=cl_image_tag booking.service.photos.first.key, height: 200, crop: :fill %>
          <div class="card-product-infos py-0 px-4">
            <h4><%= link_to "#{booking.service.name}", edit_service_booking_path(booking.id, service_id: booking.service) %></h4>
            <p class="card-desc-p-allivu-sm text-dark"><%= "Booked by: #{booking.user.first_name} #{booking.user.last_name}" %></p>
            <p class="card-desc-p-allivu-sm text-dark"><%= booking.start_date.strftime("%B %e ") %>â€”<%=booking.end_date.strftime(" %e, %Y") %></p>
            <p class="card-desc-p-link-allivu"><%= link_to "Write a Review", new_service_booking_user_review_path(booking.service, booking) %></p>
          </div>
        </div>
      <% end %>
    <% end %>
    <% if service.bookings.any? == true %>
      <h4 class="link-allivu"><%= link_to "See all" %></h4>
    <% end %>
  <% end %>
</div>
