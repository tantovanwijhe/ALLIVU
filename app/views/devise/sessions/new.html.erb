<%= render 'shared/navbar_back_pages' %>

<div class="container">
  <div class="row align-items-lg-center justify-content-center justify-content-xl-between mb-5">
    <div class="col-lg-6 d-lg-block">
      <img src="https://images.unsplash.com/photo-1527998257557-0c18b22fa4cc?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&h=550&w=450" alt="Image" class="img-fluid">
    </div>

    <div class="col-md-8 col-lg-6 col-xl-5">
      <div class="px-2">
        <h2 class="h2-allivu mb-4">Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions mt-5">
          <%= f.submit "Log in", class: "button-wide w-100" %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

</div>
