<%= render "shared/navbar_top" %>
<div class= "container border-bottom pb-5">
  <div class="row justify-content-center">
  <div class="d-flex align-items-center justify-content-center flex-column">
    <div class="banner">
    </div>
    <h4 class="px-5">Your one-stop-shop for services around you.</h4></div>
  </div>
  </div>
</div>

<div style="margin-top:40px; margin-bottom:90px;">
  <div class = "container"> <h3 class="h3-allivu px-3"> Top rated services </h3>
    <div class="scrolling-wrapper">
      <div class="container d-flex">
        <% @services.take(5).each do |service| %>
          <%= link_to service_path(service), :class =>"card-link" do %>
            <div class="card my-4 land-card">
              <%=cl_image_tag service.photos.first.key, height: 200, width: 300, :style => "border-radius: 10px" , crop: :fill%>
              <div class="overlay serv">
                <h1 class="text-dark"><%= service.name %></h1>
                 <h4 class="text-dark">By : <%= service.user.first_name%> <%= service.user.last_name%></h4>
                <% array = [] %>
                  <% service.reviews.each do |review|%>
                    <% array << review.rating %>
                  <% end %>
                  <% if array == nil %>
                    <%= "no rating" %>
                  <% else %>
                    <% average = 0 %>
                    <% array.each do |rating| %>
                      <% average += rating %>
                    <% end %>
                    <% if array.empty? %>
                    <h1><i class="bi bi-star-fill"> New</i></h1>
                    <% else %>
                    <h1><i class="bi bi-star-fill"></i> <%= (average / array.count).round(1) %></h1>
                  <% end %>
                  <% end %>
                  <div class="row">
                    <div class="action">
                      <h3 class="h3-allivu pl-3"><%= service.price.round%> â‚¬ </h3>
                      <button class="button-33" role="button">More Info</button>
                    </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
</div>
