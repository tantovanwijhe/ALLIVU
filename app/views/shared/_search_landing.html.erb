
<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">


<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-3">
      <%= simple_form_for :query, :url => '/categories', method: :get, class: "form" do |f| %>
        <%= f.input :location,
        input_html: {data: {place_autocomplete_target: "location"}, class: "d-none"},
        wrapper_html: {data: {controller: "place-autocomplete", place_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
        %>

        <%= f.button :submit, :class => "round-button", :value => "Search" %>
      <% end %>

    </div>
  </div>
</div>
