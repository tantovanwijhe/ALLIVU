
<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">


<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-3">
      <%= simple_form_for :query, :url => '/categories', method: :get do |f| %>
        <%= f.input :location, :as => :string,
        input_html: {data: {place_autocomplete_target: "location"}},
        wrapper_html: {data: {controller: "place-autocomplete",
        place_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
        %>
      <% end %>
    </div>
  </div>
</div>
