
<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-3 search-form" data-controller="location-autocomplete" data-location-autocomplete-target="danko" data-key=<%= ENV["MAPBOX_API_KEY"]%> >
      <%= form_with url: categories_path, method: :get, class: "search-form", data: {location_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]} do %>
        <div class="form-group has-feedback">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Search a location",
            input_html: {data: {location_autocomplete_target: "location"}}%>
          <label for="search" class="sr-only"></label>
          <span class="glyphicon glyphicon-search form-control-feedback"></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
