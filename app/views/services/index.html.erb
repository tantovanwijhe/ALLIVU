      <% @services.each do |service| %>
      <div class="card category my-4">
        <%= link_to service_path(service), :class =>"card-link" do %>
          <img class="card-img" src="https://wallpaperaccess.com/full/7127369.jpg" alt="Card img" >
            <div class="overlay serv">
            <h1><%= service.name %></h1>
            <div class="row">
                <% array = [] %>
                <% service.reviews.each do |review|%>
                  <% array << review.rating %>
                <% end %>
              <% if array == nil %>
                <p><%= '%.1f' % (array.sum(0.0) / array.size) %> &#9733</p>
              <% end %>
              <h2><%= service.price.round%> â‚¬ </h2>
        <% end %>
      <% end %>
  </div>
